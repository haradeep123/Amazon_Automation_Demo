<?xml version="1.0" encoding="UTF-8"?>
<suite name="AmazonAutomationTestSuite" parallel="false" thread-count="1" verbose="2">
    
    <!-- Listeners for retry functionality and enhanced reporting -->
    <listeners>
        <listener class-name="com.example.utils.RetryListener"/>
    </listeners>
    
    <!-- Global parameters -->
    <parameter name="browser" value="chrome"/>
    <parameter name="timeout" value="10"/>
    <parameter name="retry-count" value="2"/>
    
    <!-- Smoke Tests with Retry -->
    <test name="AmazonSmokeTests" preserve-order="true">
        <classes>
            <class name="com.example.tests.AmazonAutomationTest">
                <methods>
                    <include name="testAmazonHomepage"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Full Regression Tests with Retry -->
    <test name="AmazonFullTests" preserve-order="true">
        <classes>
            <class name="com.example.tests.AmazonAutomationTest">
                <methods>
                    <include name="testAmazonProductSearch"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Broken Links Tests with Retry -->
    <test name="BrokenLinksTests" preserve-order="true">
        <classes>
            <class name="com.example.tests.BrokenLinksTest">
                <methods>
                    <include name="testAmazonHomepageLinks"/>
                    <!-- Uncomment to run full broken links test -->
                    <!-- <include name="testBrokenLinks"/> -->
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Integration Tests with Retry -->
    <test name="IntegrationTests" preserve-order="true">
        <classes>
            <class name="com.example.tests.AmazonIntegrationTest"/>
        </classes>
    </test>
    
</suite>
